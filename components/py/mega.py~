import pyotherside
import urllib.request as web
import time,pprint,json

url = "http://developers.agenciaideias.com.br/loterias"

def web_connect(url):

    try:
        obj=web.urlopen(url)
        if(obj.code==200):
            return( obj.code)
    except web.URLError as e:
        print(e)
        print("Network connection Error")
